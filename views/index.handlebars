<div class="container-fluid" id="main">
    <div class="row justify-content-center">
        <div class="col col-md-9 articles">
            {{#each articles}}
                <div class="card" data-category="{{category}}">
                    <div class="card-inner">
                        <img src="{{image}}" class="card-img-top img-thumbnail" alt="">
                        <h2 href="{{link}}" class="text-center lh-title">{{title}}</h2>
                    </div>
                    <div class="card-bottom">
                        <p class="text-center">Category: {{category}}</p>
                    </div>
                    <div class="favorite" data-id="{{_id}}" title="Add to favorites list">
                        <i class="far fa-plus-square"></i>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="col col-lg-4 sidebar">

        </div>
    </div>
</div>